            border: 1px solid #28a745; /* Đường viền màu xanh lá nếu muốn */
            border-radius: 5px; /* Bo góc cho đường viền */
            height: 700px;

        }

        .tab-content {
            
            background-color: white; /* Màu nền cho tab đang hoạt động */
            padding: 20px; /* Thêm padding nếu cần */
            border: 1px solid #28a745; /* Đường viền màu xanh lá nếu muốn */
