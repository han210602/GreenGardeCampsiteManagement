                </div>
                    <div class="col-md-3">
                        <label for="orderDate" class="form-label">Ngày sử dụng</label>
                        <input type="datetime-local" class="form-control" id="orderDate" name="orderdate" required>
                    </div>
                </div>
                <br />
                <script>
                    function change() {
                        document.getElementById("fr1").submit();


                    }
                </script>
                <div class="col-md-3">
                    <form id="fr1" asp-controller="OrderManagement" asp-action="OrderTickets" method="get">


                        <select name="idcategory" class="form-select" onchange="change()">
                            <option value="0">
                                All
                            </option>
                            @foreach (TicketCategoryVM item in ViewBag.categories)
                            {
                                if (item.TicketCategoryId.Equals(ViewBag.idcategory))
                                {
                                    <option value="@item.TicketCategoryId" selected>
                                        @item.TicketCategoryName
                                    </option>
                                }
                                else
                                {
                                    <option value="@item.TicketCategoryId">
                                        @item.TicketCategoryName
                                    </option>

                                }
                            }
                        </select>
                    </form>
                </div>
                <form asp-controller="OrderManagement" asp-action="AddToCart" method="get">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Mã vẽ</th>
                                <th>Tên vé</th>
                                <th>Hình ảnh</th>
                                <th>Giá</th>
                                <th>Số lượng</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (TicketVM item in ViewBag.tickets)
                            {
                                <tr>
                                    <td>@item.TicketId</td>
                                    <td>@item.TicketName</td>
                                    <td>@item.ImgUrl</td>
                                    <td>@item.Price</td>
                                    <td>
                                        <input type="text" value="@item.TicketId" hidden name="TicketIds">
                                        <input type="text" value="@item.TicketName" hidden name="Name">
                                        <input type="number" value="@item.Price" hidden name="Prices">
                                        <input type="number" min="0" value="@item.Quantity" style="width: 100px;" name="Quantities">

                                    </td>
                                </tr>


                            }
                        </tbody>
                    </table>
                <button style="background-color: #28a745; margin-bottom: 5px" type="submit" class="btn btn-primary">
                        <i class="bi bi-cart"></i> Add to Cart
                    </button>

                </form>

                <a href="/OrderManagement/Index" class="btn btn-secondary">Quay lại</a>
            <a href="/OrderManagement/OrderCampingGears" class="btn btn-primary" style="background-color: #28a745;">Tiếp tục</a>
            </div>


            <div id="combo" class="tab-content">
