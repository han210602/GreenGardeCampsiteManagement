@if (ViewBag.Notification != null)
{
    <div id="notification" class="notification">
        @ViewBag.Notification
    </div>
}

@section Scripts {
    <script>
        // Nếu có thông báo (không null), hiển thị thông báo
        var notificationMessage = "@ViewBag.Notification";
        if (notificationMessage) {
            var notificationElement = document.getElementById("notification");

            // Hiển thị thông báo với hiệu ứng fade in
            notificationElement.style.display = "block"; // Hiển thị phần tử
            setTimeout(function () {
                notificationElement.classList.add("show");
            }, 100); // Trễ 100ms để đảm bảo CSS transition hoạt động

            // Ẩn thông báo sau 3 giây (hiệu ứng mờ dần)
            setTimeout(function () {
                notificationElement.classList.remove("show");
                notificationElement.classList.add("hide");

                // Sau khi hiệu ứng fade out hoàn tất, ẩn thông báo hoàn toàn
                setTimeout(function () {
                    notificationElement.style.display = "none";
                }, 1000); // Chờ 1 giây để hiệu ứng mờ hoàn tất
            }, 3000); // Thông báo hiển thị trong 3 giây trước khi bắt đầu fade out
        }
    </script>
    <style>
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #4CAF50;
            color: white;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
            z-index: 1000;
            width: 250px;
            opacity: 0; /* Ban đầu thông báo bị ẩn */
            transition: opacity 1s ease-in-out; /* Hiệu ứng fade in và fade out */
        }

            .notification.show {
                opacity: 1; /* Hiển thị thông báo */
            }

            .notification.hide {
                opacity: 0; /* Mờ dần khi ẩn */
            }
    </style>
}

