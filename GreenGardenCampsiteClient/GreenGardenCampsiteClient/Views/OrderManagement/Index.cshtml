<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management</title>
    <link href="~/css/Admin/styles.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T387870TPpwcgR8m7+UP+7X/qOH3b6T1QjsDuUp25/7YkG79664NVoIPd35N72q10" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div>
            <h2>Quản lý đặt trước</h2>
            <div class="row g-2 mb-3">
                <div class="col-md-3">
                    <input type="text" id="searchInput" class="form-control" placeholder="Tim kiem..">
                </div>
                <div class="col-md-3">
                    <a id="createButton" class="btn btn-primary" href="/OrderManagement/OrderTickets" style="background-color: #28a745;">Tạo order mới</a>
                </div>
            </div>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Mã đặt</th>
                        <th>Tên khách hàng</th>
                        <th>Tên nhân viên</th>
                        <th>Ngày đặt</th>
                        <th>Ngày sử dụng</th>
                        <th>Tiền cọc</th>
                        <th>Tổng tiền</th>
                        <th>Phải trả</th>
                        <th>Trạng thái</th>
                        <th>Hoạt động</th>
                       
                    </tr>
                </thead>

                <tbody id="orderTableBody">

                    @foreach (OrderVM item in ViewBag.dataorder)
                    {

                        <tr>

                            <td><a asp-controller="Order" asp-action="OrderDetails" asp-route-idorder="@item.OrderId">#@item.OrderId</a></td>

                            <td>@item.CustomerName</td>
                            <td>@item.EmployeeName</td>
                            <td>@item.OrderDate</td>
                            <td>@item.OrderUsageDate</td>
                            <td>@item.Deposit</td>
                            <td>@item.TotalAmount</td>
                            <td>@item.AmountPayable</td>
                            <style>
                                /* Background overlay for modal */
                                .modal {
                                    display: none;
                                    position: fixed;
                                    z-index: 1000;
                                    left: 0;
                                    top: 0;
                                    width: 100%;
                                    height: 100%;
                                    overflow: auto;
                                    background-color: rgba(0, 0, 0, 0.5); /* Darker background */
                                    padding-top: 60px;
                                }

                                /* Modal content styling */
                                .modal-content {
                                    background-color: #fff;
                                    margin: 5% auto;
                                    padding: 20px;
                                    border: 1px solid #ccc;
                                    border-radius: 10px;
                                    width: 30%;
                                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                                }

                                /* Close button styling */
                                .close {
                                    color: #333;
                                    float: right;
                                    font-size: 24px;
                                    font-weight: bold;
                                    cursor: pointer;
                                }

                                    .close:hover {
                                        color: #ff0000; /* Red when hovered */
                                    }

                                /* Button styling */
                                button {
                                    background-color: #28a745; /* Green button to match your page */
                                    color: white;
                                    padding: 10px 20px;
                                    margin-top: 15px;
                                    border: none;
                                    border-radius: 5px;
                                    cursor: pointer;
                                }

                                    button:hover {
                                        background-color: #218838; /* Darker green on hover */
                                    }

                                /* Center text in table cells */
                                .table th, .table td {
                                    text-align: center; /* Center text */
                                }

                                .table thead th {
                                    background-color: #026345; /* Màu xanh lá cây đậm */
                                    color: white;
                                    font-weight: bold;
                                }

                                /* Input field styling */
                                input[type="number"] {
                                    width: 100%;
                                    padding: 10px;
                                    margin: 10px 0;
                                    display: inline-block;
                                    border: 1px solid #ccc;
                                    border-radius: 4px;
                                    box-sizing: border-box;
                                }

                                /* Heading styling */
                                h3 {
                                    color: #28a745; /* Green heading text */
                                }

                                /* Form alignment */
                                .modal-content form {
                                    display: flex;
                                    flex-direction: column;
                                    gap: 10px;
                                }
                            </style>

                            <script>
                                function showDepositForm(orderId) {
                                    // Hiển thị modal
                                    var modal = document.getElementById("modal-" + orderId);
                                    modal.style.display = "block";
                                }

                                function closeModal(orderId) {
                                    // Đóng modal
                                    var modal = document.getElementById("modal-" + orderId);
                                    modal.style.display = "none";
                                }
                                function change(orderId) {
                                    document.getElementById("fr-" + orderId).submit();
                                }
                                function showCancelDepositConfirm(orderId) {
                                    // Hiển thị modal xác nhận hủy cọc
                                    var modal = document.getElementById("cancelModal-" + orderId);
                                    modal.style.display = "block";
                                }

                                function closeCancelModal(orderId) {
                                    // Đóng modal
                                    var modal = document.getElementById("cancelModal-" + orderId);
                                    modal.style.display = "none";
                                }

                                function confirmCancel(orderId) {
                                    // Submit form hủy cọc
                                    document.getElementById("cancelDepositForm-" + orderId).submit();
                                }
                            </script>
                            <div id="modal-@item.OrderId" class="modal">
                                <div class="modal-content">
                                    <span class="close" onclick="closeModal(@item.OrderId)">&times;</span>
                                    <h3>Nhập số tiền đặt cọc cho đơn hàng #@item.OrderId</h3>
                                    <form asp-controller="OrderManagement" asp-action="EnterDeposit" method="post">
                                        <label for="depositAmount">Nhập số tiền đặt cọc:</label>
                                        <input type="number" name="money" id="money" min="0" required />

                                        <!-- Truyền OrderId thông qua input ẩn -->
                                        <input type="hidden" name="idorder" value="@item.OrderId" />

                                        <button type="submit">Xác nhận</button>
                                    </form>
                                </div>
                            </div>
                            <div id="cancelModal-@item.OrderId" class="modal">
                                <div class="modal-content">
                                    <span class="close" onclick="closeCancelModal(@item.OrderId)">&times;</span>
                                    <h3>Bạn có chắc chắn muốn hủy tiền cọc cho đơn hàng #@item.OrderId?</h3>
                                    <form id="cancelDepositForm-@item.OrderId" asp-controller="OrderManagement" asp-action="CancelDeposit" method="post">
                                        <!-- Truyền OrderId thông qua input ẩn -->
                                        <input type="hidden" name="idorder" value="@item.OrderId" />
                                        <button type="button" onclick="confirmCancel(@item.OrderId)">Xác nhận</button>
                                        <button type="button" onclick="closeCancelModal(@item.OrderId)">Hủy</button>
                                    </form>
                                </div>
                            </div>
                            <td>
                                @if (item.StatusOrder == false)
                                {
                                    <button onclick="showDepositForm(@item.OrderId)">Đặt cọc</button>

                                }
                                else
                                {
                                    <button style="background-color: red;" onclick="showCancelDepositConfirm(@item.OrderId)">Hủy cọc</button>
                                }

                            </td>
                            <td>
                                <form id="fr-@item.OrderId" asp-controller="OrderManagement" asp-action="UpdateActivityOrder" method="post">
                                    <input type="hidden" name="idorder" value="@item.OrderId" />
                                    <select name="idactivity" onchange="change(@item.OrderId)">
                                        @foreach (ActivityVM activity in ViewBag.activities)
                                        {
                                            if (item.ActivityId == activity.ActivityId)
                                            {
                                                <option value="@activity.ActivityId" selected>
                                                    @activity.ActivityName
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@activity.ActivityId">
                                                    @activity.ActivityName
                                                </option>
                                            }
                                        }
                                    </select>
                                </form>
                            </td>
                            
                        </tr>
                    }


                </tbody>
            </table>


        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C8fC7N6'e6OzTO+648+pGdO/d6k4l726DwN13j0xV7V7+x70863161b" crossorigin="anonymous"></script>

</body>
</html>