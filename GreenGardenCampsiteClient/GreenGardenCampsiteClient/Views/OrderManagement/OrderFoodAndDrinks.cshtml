<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tạo order đồ ăn mới</title>
    <link href="~/css/Admin/styles.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T387870TPpwcgR8m7+UP+7X/qOH3b6T1QjsDuUp25/7YkG79664NVoIPd35N72q10" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-4">
        <h2>Đặt đồ ăn</h2><br />
        <script>
            function change() {
                document.getElementById("fr").submit();
            }
        </script>
        <div class="row g-2 mb-6">
        <div class="col-md-3">
            <form id="fr" asp-controller="OrderManagement" asp-action="OrderFoodAndDrinks" method="get">


                <select name="idcategory" class="form-select" onchange="change()">
                    <option value="0">
                        All
                    </option>
                    @foreach (FoodAndDrinkCategoryVM item in ViewBag.categories)
                    {
                        if (item.CategoryId.Equals(ViewBag.idcategory))
                        {
                            <option value="@item.CategoryId" selected>
                                @item.CategoryName
                            </option>
                        }
                        else
                        {
                            <option value="@item.CategoryId">
                                @item.CategoryName
                            </option>

                        }
                    }
                </select>
            </form>
        </div>
        <div class="col-md-6">
            <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm..">
        </div>
       </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Mã</th>
                    <th>Tên</th>
                    <th>Hình ảnh</th>
                    <th>Giá</th>
                    <th>Yêu cầu thêm</th>
                    <th>Số lượng</th>

                </tr>
            </thead>
            <tbody>
                @foreach (FoodAndDrinkVM item in ViewBag.gears)
                {
                    <tr>
                        <td>@item.ItemId</td>
                        <td>@item.ItemName</td>
                        <td>@item.ImgUrl</td>
                        <td>@item.Price</td>
                        <td><textarea></textarea></td>
                        <td>
                            <input type="number" min="0" value="0" style="width: 100px;">
                        </td>

                    </tr>
                }
            </tbody>
        </table>


        <a href="/OrderManagement/OrderCampingGears" class="btn btn-secondary">Quay lại</a>
        <a class="btn btn-primary" href="/OrderManagement/OrderDetails" style="background-color: #28a745;">Chi tiết đơn hàng</a>



    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C8fC7N6'e6OzTO+648+pGdO/d6k4l726DwN13j0xV7V7+x70863161b" crossorigin="anonymous"></script>
</body>
</html>
