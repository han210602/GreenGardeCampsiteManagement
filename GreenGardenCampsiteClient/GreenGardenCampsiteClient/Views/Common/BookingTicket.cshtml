<script>
    document.addEventListener("DOMContentLoaded", function () {
        const singleTicketForm = document.getElementById("single-ticket-form");
        const groupTicketForm = document.getElementById("group-ticket-form");
        const cartItems = document.getElementById("cart-items");
        const totalPriceElement = document.getElementById("total-price");
        const checkoutButton = document.getElementById("checkout-button");
        const deleteOrderButton = document.getElementById("delete-order-button"); // Nút xóa đơn

        let totalAmount = 0;

        function updateCartDetails(type, date, ticketType, quantity, pricePerTicket) {
            // Kiểm tra nếu giá vé hoặc số lượng không hợp lệ
            if (isNaN(pricePerTicket) || isNaN(quantity) || pricePerTicket <= 0 || quantity <= 0) {
                alert("Vui lòng chọn loại vé và số lượng hợp lệ.");
                return;
            }

            // Tạo mục vé mới
            const cartItem = document.createElement("div");
            cartItem.classList.add("cart-item");
            cartItem.innerHTML = `
                <p>${ticketType} - Số lượng: ${quantity}</p>
                <p>Giá vé: ${pricePerTicket.toLocaleString()}đ</p>
                <p>Từ ${date}</p>
                <hr>
            `;

            // Thêm mục vé mới vào giỏ hàng
            cartItems.appendChild(cartItem);

            // Cập nhật tổng tiền
            totalAmount += pricePerTicket * quantity;
            totalPriceElement.innerText = `Tạm tính: ${totalAmount.toLocaleString()}đ`;

            // Hiển thị nút thanh toán và nút xóa đơn nếu tổng tiền lớn hơn 0
            if (totalAmount > 0) {
                checkoutButton.style.display = "block";
                deleteOrderButton.style.display = "block"; // Hiển thị nút xóa đơn
            }
        }

        function getSelectedTicketInfo(form) {
            const date = form.querySelector("input[type='date']").value;
            const ticketTypeElement = form.querySelector("select#age-category");
            const ticketPrice = ticketTypeElement ? ticketTypeElement.options[ticketTypeElement.selectedIndex].dataset.price : 0;
            const quantityElement = form.querySelector("#quantity") || form.querySelector("#group-size");
            const quantity = quantityElement ? parseInt(quantityElement.value) : 1;

            return { date, ticketType: ticketTypeElement.options[ticketTypeElement.selectedIndex].text, ticketPrice: parseInt(ticketPrice), quantity };
        }

        singleTicketForm.addEventListener("submit", function (e) {
            e.preventDefault();
            const { date, ticketType, ticketPrice, quantity } = getSelectedTicketInfo(singleTicketForm);
            updateCartDetails("Vé đơn", date, ticketType, quantity, ticketPrice);
        });

        groupTicketForm.addEventListener("submit", function (e) {
            e.preventDefault();
            const { date, ticketType, ticketPrice, quantity } = getSelectedTicketInfo(groupTicketForm);
            updateCartDetails("Vé theo nhóm", date, ticketType, quantity, ticketPrice);
        });

        // Chức năng cho nút "Xóa đơn"
        deleteOrderButton.addEventListener("click", function () {
            cartItems.innerHTML = ""; // Xóa tất cả các mục vé
            totalAmount = 0; // Đặt lại tổng tiền
            totalPriceElement.innerText = ""; // Xóa tổng tiền hiển thị
            checkoutButton.style.display = "none"; // Ẩn nút thanh toán
            deleteOrderButton.style.display = "none"; // Ẩn nút xóa đơn
        });
    });



</script>
<script>
    // Lấy ngày hôm nay
    const today = new Date();

    // Định dạng ngày theo kiểu YYYY-MM-DD
    const formatDate = (date) => {
        return date.toISOString().split('T')[0];
    };

    // Thiết lập thuộc tính min cho các ô nhập ngày
    document.getElementById('single-date').setAttribute('min', formatDate(today));
    document.getElementById('group-date').setAttribute('min', formatDate(today));
</script>
<script>
    // Toggling between single and group forms
    const singleTab = document.getElementById('single-tab');
    const groupTab = document.getElementById('group-tab');
    const singleForm = document.getElementById('single-ticket-form');
    const groupForm = document.getElementById('group-ticket-form');

    singleTab.addEventListener('click', () => {
        singleForm.classList.add('form-active');
        groupForm.classList.remove('form-active');
    });

    groupTab.addEventListener('click', () => {
        groupForm.classList.add('form-active');
        singleForm.classList.remove('form-active');
    });

    // Calculate price for single ticket
    const ageCategory = document.getElementById('age-category');
    const quantity = document.getElementById('quantity');
    const singlePriceInfo = document.getElementById('single-price-info');

    ageCategory.addEventListener('change', updateSinglePrice);
    quantity.addEventListener('change', updateSinglePrice);

    function updateSinglePrice() {
        let pricePerTicket = 0;
        if (ageCategory.value === 'adult') {
            pricePerTicket = 80000;
        } else if (ageCategory.value === 'child') {
            pricePerTicket = 50000;
        } else if (ageCategory.value === 'baby') {
            pricePerTicket = 0;
        }

        const totalPrice = pricePerTicket * quantity.value;
        singlePriceInfo.textContent = `Tổng giá vé: ${totalPrice.toLocaleString()} VND`;
    }

    // Calculate price for group tickets
    const groupSize = document.getElementById('group-size');
    const groupPriceInfo = document.getElementById('group-price-info');

    groupSize.addEventListener('input', updateGroupPrice);

    function updateGroupPrice() {
        const numPeople = parseInt(groupSize.value);
        let pricePerTicket = 0;

        if (numPeople >= 50) {
            pricePerTicket = 40000;
        } else if (numPeople >= 20) {
            pricePerTicket = 50000;
        }

        const totalPrice = pricePerTicket * numPeople;
        groupPriceInfo.textContent = `Tổng giá vé: ${totalPrice.toLocaleString()} VND cho ${numPeople} người`;
    }
</script>
<script>

    document.getElementById('single-tab').addEventListener('click', function () {
