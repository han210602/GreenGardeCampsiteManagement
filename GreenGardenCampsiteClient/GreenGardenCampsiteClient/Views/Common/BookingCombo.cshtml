<script>
    // Function to handle buying combo tickets
    function buyCombo(comboType) {
        let comboSize, pricePerPerson, maxPeople, minPeople;

        if (comboType === 'combo-5-10') {
            comboSize = document.getElementById('combo-5-10-size').value;
            minPeople = 5;
            maxPeople = 10;
            pricePerPerson = 300000;
        } else if (comboType === 'combo-10-20') {
            comboSize = document.getElementById('combo-10-20-size').value;
            minPeople = 10;
            maxPeople = 20;
            pricePerPerson = 250000;
        } else {
            alert('Combo không hợp lệ.');
            return;
        }

        comboSize = parseInt(comboSize);

        // Check if the number of people is valid
        if (comboSize < minPeople || comboSize > maxPeople) {
            alert(`Số lượng khách không hợp lệ! Chọn từ ${minPeople}-${maxPeople} người.`);
            return;
        }

        // Calculate total price
        const totalPrice = pricePerPerson * comboSize;

        // Create ticket information
        const ticketInfo = {
            type: comboType === 'combo-5-10' ? 'Combo từ 5-10 người' : 'Combo từ 10-20 người',
            numPeople: comboSize,
            pricePerPerson: pricePerPerson,
            totalPrice: totalPrice
        };

        // Display ticket information in the payment section
        displayTicketInfo(ticketInfo);
    }

    // Function to display ticket information in the payment section
    function displayTicketInfo(ticketInfo) {
        const cartItems = document.getElementById('cart-items');
        const totalPriceElement = document.getElementById('total-price');

        // Clear previous ticket info
        cartItems.innerHTML = '';

        // Create and append ticket details
        const ticketDetail = document.createElement('div');
        ticketDetail.innerHTML = `
            <p>Loại vé: ${ticketInfo.type}</p>
            <p>Số lượng khách: ${ticketInfo.numPeople}</p>
            <p>Giá mỗi vé: ${ticketInfo.pricePerPerson.toLocaleString()} VND</p>
            <p>Tổng giá: ${ticketInfo.totalPrice.toLocaleString()} VND</p>
        `;
        cartItems.appendChild(ticketDetail);

        // Display total price
        totalPriceElement.textContent = `Tổng thanh toán: ${ticketInfo.totalPrice.toLocaleString()} VND`;

        // Show checkout and delete buttons
        document.getElementById('checkout-button').style.display = 'block';
        document.getElementById('delete-order-button').style.display = 'block';
    }

    // Add event listeners for the "Mua vé combo" buttons
    const combo510Button = document.querySelector('#combo-5-10-form .buy-button');
    const combo1020Button = document.querySelector('#combo-10-20-form .buy-button');

    combo510Button.addEventListener('click', function (event) {
        event.preventDefault(); // Prevent the default form submission
        buyCombo('combo-5-10');
    });

    combo1020Button.addEventListener('click', function (event) {
        event.preventDefault(); // Prevent the default form submission
        buyCombo('combo-10-20');
    });




</script>
<script>
    // Lấy ngày hôm nay
    const today = new Date();

    // Định dạng ngày theo kiểu YYYY-MM-DD
    const formatDate = (date) => {
        return date.toISOString().split('T')[0];
    };

    // Thiết lập thuộc tính min cho các ô nhập ngày
    document.getElementById('single-date').setAttribute('min', formatDate(today));
    document.getElementById('group-date').setAttribute('min', formatDate(today));
</script>
<script>
    // Toggling between single and group forms
    const singleTab = document.getElementById('single-tab');
    const groupTab = document.getElementById('group-tab');
    const singleForm = document.getElementById('single-ticket-form');
    const groupForm = document.getElementById('group-ticket-form');

    singleTab.addEventListener('click', () => {
        singleForm.classList.add('form-active');
        groupForm.classList.remove('form-active');
    });

    groupTab.addEventListener('click', () => {
        groupForm.classList.add('form-active');
        singleForm.classList.remove('form-active');
    });

    // Calculate price for single ticket
    const ageCategory = document.getElementById('age-category');
    const quantity = document.getElementById('quantity');
    const singlePriceInfo = document.getElementById('single-price-info');

    ageCategory.addEventListener('change', updateSinglePrice);
    quantity.addEventListener('change', updateSinglePrice);

    function updateSinglePrice() {
        let pricePerTicket = 0;
        if (ageCategory.value === 'adult') {
            pricePerTicket = 80000;
        } else if (ageCategory.value === 'child') {
            pricePerTicket = 50000;
        } else if (ageCategory.value === 'baby') {
            pricePerTicket = 0;
        }

        const totalPrice = pricePerTicket * quantity.value;
        singlePriceInfo.textContent = `Tổng giá vé: ${totalPrice.toLocaleString()} VND`;
    }

    // Calculate price for group tickets
    const groupSize = document.getElementById('group-size');
    const groupPriceInfo = document.getElementById('group-price-info');

    groupSize.addEventListener('input', updateGroupPrice);

    function updateGroupPrice() {
        const numPeople = parseInt(groupSize.value);
        let pricePerTicket = 0;

        if (numPeople >= 50) {
            pricePerTicket = 40000;
        } else if (numPeople >= 20) {
            pricePerTicket = 50000;
        }

        const totalPrice = pricePerTicket * numPeople;
        groupPriceInfo.textContent = `Tổng giá vé: ${totalPrice.toLocaleString()} VND cho ${numPeople} người`;
    }
</script>
