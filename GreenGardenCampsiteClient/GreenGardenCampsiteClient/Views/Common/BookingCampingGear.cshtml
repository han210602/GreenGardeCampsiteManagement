@{
    var campingGears = ViewBag.CampingGears as List<CampingGearVM>;
    var campingCategories = ViewBag.CampingCategories as List<CampingCategoryVM>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thuê đồ</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Source+Serif+Pro:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Common/BoongkingCampingGear.css" asp-append-version="true" />
    <style>
        .active-category { /* Màu nền cho danh mục đang chọn */
            color: darkorange; /* Màu chữ cho danh mục đang chọn */
            font-weight: bold; /* Đặt độ đậm của chữ thành in đậm */
        }
    </style>

</head>
<body>
    <div class="menu-container">
        <div class="menu-left">
            <div class="menu-header">Đồ Dùng</div>
            <ul>
                <li>
                    <a class="@(ViewBag.CurrentCategoryId == null ? "active-category" : "")"
                       href="@Url.Action("BookingCampingGear", "Common", new { sortBy = ViewBag.SortBy })">Tất cả</a>
                </li>
                @foreach (var category in ViewBag.CampingCategories)
                {
                    <li>
                        <a class="@(ViewBag.CurrentCategoryId == category.GearCategoryId ? "active-category" : "")"
                           href="@Url.Action("BookingCampingGear", "Common", new { categoryId = category.GearCategoryId, sortBy = ViewBag.SortBy })">
                            @category.GearCategoryName
                        </a>
                    </li>
                }
            </ul>
        </div>


        <div class="menu-right">
            <div class="sort-dropdown">
                <label for="sort">Sắp xếp theo:</label>
                <select id="sort" onchange="sortCampingGears()">
                    @if (ViewBag.SortBy == "1")
                    {
                        <option value="0">Mặc định</option>
                        <option value="1" selected>Giá: Thấp đến Cao</option>
                        <option value="2">Giá: Cao đến Thấp</option>
                        <option value="3">Phổ biến</option>
                        <option value="4">Mới nhất</option>
                    }
                    else if (ViewBag.SortBy == "2")
                    {
                        <option value="0">Mặc định</option>
                        <option value="1">Giá: Thấp đến Cao</option>
                        <option value="2" selected>Giá: Cao đến Thấp</option>
                        <option value="3">Phổ biến</option>
                        <option value="4">Mới nhất</option>
                    }
                    else if (ViewBag.SortBy == "3")
                    {
                        <option value="0">Mặc định</option>
                        <option value="1">Giá: Thấp đến Cao</option>
                        <option value="2">Giá: Cao đến Thấp</option>
                        <option value="3" selected>Phổ biến</option>
                        <option value="4">Mới nhất</option>
                    }
                    else if (ViewBag.SortBy == "4")
                    {
                        <option value="0">Mặc định</option>
                        <option value="1">Giá: Thấp đến Cao</option>
                        <option value="2">Giá: Cao đến Thấp</option>
                        <option value="3">Phổ biến</option>
                        <option value="4" selected>Mới nhất</option>
                    }
                    else
                    {
                        <option value="0" selected>Mặc định</option>
                        <option value="1">Giá: Thấp đến Cao</option>
                        <option value="2">Giá: Cao đến Thấp</option>
                        <option value="3">Phổ biến</option>
                        <option value="4">Mới nhất</option>

                    }

                </select>
            </div>
            <div class="menu-item">
                @if (campingGears != null && campingGears.Any())
                {
                    foreach (var item in campingGears)
                    {
                        <div class="item-card">
                            <img src="https://kamp.vn/wp-content/uploads/2021/04/thue-ban-ghe-4-nguoi-binh-thanh-1.jpg" alt="@item.GearName" />
                            <h3>@item.GearName</h3>
                            <p class="price">@item.RentalPrice.ToString("N0") ₫</p>
                            <button>Thuê đồ</button>
                        </div>
                    }
                }
                else
                {
                    <p>Không có dữ liệu để hiển thị.</p>
                }
            </div>
        </div>
    </div>

    <script>
        function sortCampingGears() {
            const sortValue = document.getElementById("sort").value;
            const categoryId = '@ViewBag.CurrentCategoryId'; // Lấy categoryId hiện tại từ ViewBag nếu có
            const url = `@Url.Action("BookingCampingGear", "Common")?categoryId=${categoryId}&sortBy=${sortValue}`;
            window.location.href = url;
        }
    </script>
</body>
</html>
