@model List<Account>


<h2>Danh sách tài khoản</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Họ và tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Ngày sinh</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.UserId</td>
                    <td>@account.FirstName @account.LastName</td>
                    <td>@account.Email</td>
                    <td>@account.PhoneNumber</td>
                    <td>@account.DateOfBirth.ToString()</td>
                    <td>@(account.IsActive ? "Hoạt động" : "Không hoạt động")</td>

                    <td>@account.RoleId</td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có tài khoản nào để hiển thị.</p>
}
