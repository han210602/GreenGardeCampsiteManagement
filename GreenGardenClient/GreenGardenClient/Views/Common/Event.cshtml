                        }

                            .site-menu .dropdown li a:hover {
                                background-color: #e0e0e0; /* Màu nền khi hover vào các liên kết */
                            }

                .site-menu .has-dropdown:hover .dropdown {
                    display: block; /* Hiện menu thả xuống khi hover vào mục Services */
                }
                /* Card sự kiện */
                .post-entry-1 {
                    display: flex;
                    flex-direction: column; /* Căn thành cột: ảnh, nội dung */
                    height: 100%; /* Đảm bảo chiều cao cố định */
                    border: 1px solid #ddd; /* Viền nhẹ */
                    border-radius: 10px;
                    overflow: hidden; /* Để ảnh và nội dung không tràn */
                    background: #fff;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Đổ bóng */
                }

                    /* Ảnh */
                    .post-entry-1 img {
                        width: 100%; /* Đầy chiều rộng */
                        height: 200px; /* Chiều cao cố định */
                        object-fit: cover; /* Giữ tỉ lệ ảnh */
                        border-bottom: 1px solid #ddd; /* Viền dưới ảnh */
                    }

                /* Nội dung sự kiện */
                .post-entry-1-contents {
                    display: flex;
                    flex-direction: column; /* Nội dung theo cột */
                    padding: 15px;
                    text-align: left;
                    flex: 1; /* Để nội dung chiếm toàn bộ khoảng trống */
                }

                /* Tên sự kiện */
                .event-title {
                    font-size: 18px;
                    font-weight: bold;
                    color: #333;
                    margin-bottom: 10px;
                    white-space: nowrap; /* Không cho chữ xuống dòng */
                    overflow: hidden; /* Ẩn nội dung thừa */
                    text-overflow: ellipsis; /* Hiển thị dấu "..." nếu chữ quá dài */
                }

                /* Meta: Ngày & Người tạo */
                .meta {
                    font-size: 14px;
                    color: #888;
                    margin-bottom: 15px;
                    display: flex; /* Dùng flex để căn đều */
                    justify-content: space-between; /* Khoảng cách giữa ngày và người tạo */
                    align-items: center;
                }

                .event-date, .event-creator {
                    white-space: nowrap; /* Không xuống dòng */
                    overflow: hidden; /* Ẩn chữ thừa */
                    text-overflow: ellipsis; /* Thêm dấu "..." nếu chữ dài */
                    max-width: 45%; /* Giới hạn tối đa 45% chiều rộng mỗi bên */
                }

                /* Mô tả sự kiện */
                .event-description {
                    font-size: 14px;
                    color: #555;
                    line-height: 1.6;
                    margin-bottom: 15px;
                    display: -webkit-box; /* Hỗ trợ hiển thị mô tả ngắn gọn */
                    -webkit-line-clamp: 3; /* Hiển thị tối đa 3 dòng */
                    -webkit-box-orient: vertical; /* Chiều dọc */
                    overflow: hidden; /* Ẩn chữ thừa */
                }

                /* Nút hành động */
                .event-action {
                    margin-top: auto; /* Đẩy nút xuống cuối */
                    text-align: center; /* Căn giữa nút */
                }

                    .event-action .btn {
                        display: inline-block;
                        font-size: 14px;
                        font-weight: bold;
                        color: #fff;
                        background-color: #efba6c;
                        border: none;
                        border-radius: 5px;
                        padding: 10px 20px;
                        transition: all 0.3s ease;
                    }

                        /* Hiệu ứng hover nút */
                        .event-action .btn:hover {
                            background-color: #efba6c;
                            transform: scale(1.05);
                        }
            </style>
            <script>
                $(document).ready(function () {
                    $('.has-dropdown').hover(
                        function () {
                            $(this).find('.dropdown').stop(true, true).slideDown(200);
                        },
                        function () {
                            $(this).find('.dropdown').stop(true, true).slideUp(200);
                        }
                    );
                });
            </script>
