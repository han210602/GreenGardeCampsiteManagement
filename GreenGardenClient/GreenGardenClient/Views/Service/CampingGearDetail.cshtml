    <script>
        AOS.init({
            duration: 1200, // Set duration for animation (optional)
        });

        function increaseQuantity() {
            var quantityInput = document.getElementById('quantity');
            var currentQuantity = parseInt(quantityInput.value, 10);
            var maxQuantity = parseInt(quantityInput.max, 10);

            if (currentQuantity < maxQuantity) { // Ensure quantity does not exceed available stock
                quantityInput.value = currentQuantity + 1;
                updateHiddenQuantity();
            }
        }

        function decreaseQuantity() {
            var quantityInput = document.getElementById('quantity');
            var currentQuantity = parseInt(quantityInput.value, 10);

            if (currentQuantity > 1) { // Ensure quantity does not drop below 1
                quantityInput.value = currentQuantity - 1;
                updateHiddenQuantity();
            }
        }

        function updateHiddenQuantity() {
            var quantity = document.getElementById('quantity').value;
            document.getElementById('hidden-quantity').value = quantity;
            sessionStorage.setItem('selectedQuantity', quantity);
        }
        function updateCartCount() {
            $.get('/Service/GetCartItemCount', function (count) {
                if (count !== null && count > 0) {
                    // Kiểm tra nếu badge chưa tồn tại, thêm badge mới
                    if (!$('.cart-badge').length) {
                        $('.cart-wrapper').append(`<span class="cart-badge">${count}</span>`);
                    } else {
                        // Nếu badge đã tồn tại, cập nhật số lượng
                        $('.cart-badge').text(count);
                    }
                } else {
                    // Nếu giỏ hàng trống, hiển thị 0
                    if (!$('.cart-badge').length) {
                        $('.cart-wrapper').append(`<span class="cart-badge">0</span>`);
                    } else {
                        $('.cart-badge').text('0');
                    }
                }
            });
        }

        function addToCart(gearId) {
            const form = $(`#product-${gearId}`).find('form');
            const quantityInput = document.getElementById('quantity'); // User-input quantity
            const quantity = parseInt(quantityInput.value, 10); // Quantity to add to the cart
            const availableQuantityElement = document.querySelector("#product-" + gearId + " strong");
            const availableQuantity = parseInt(availableQuantityElement.textContent, 10); // Current available quantity in stock
            const savedDate = sessionStorage.getItem('usageDateForAll');
            const savedTime = sessionStorage.getItem('usageTimeForAll');

            // Đặt ngày và giờ vào hidden input
            document.getElementById('hidden-date-' + gearId).value = `${savedDate} ${savedTime}`;

            // Kiểm tra nếu số lượng <= 0 thì không cho thêm vào giỏ hàng
            if (isNaN(availableQuantity) || availableQuantity <= 0) {
                Swal.fire({
                    icon: "error",
                    title: "Hết hàng",
                    text: "Sản phẩm này đã hết số lượng trong ngày!",
                    showConfirmButton: false,
                    timer: 1500
                });
                return;
            }

            // Validate if the user-input quantity exceeds available stock
            if (quantity > availableQuantity) {
                Swal.fire({
                    icon: "error",
                    title: "Lỗi số lượng",
                    text: "Số lượng đặt không được vượt quá số lượng còn lại!",
                    showConfirmButton: false,
                    timer: 1500
                });
                return; // Prevent adding to cart
            }

            const formData = form.serialize();

            // Perform AJAX request to add item to the cart
            $.ajax({
                type: "POST",
                url: form.attr("action"),
                data: formData,
                success: function (response) {
                    if (response.success) {
                        // Show success notification
                        Swal.fire({
                            icon: "success",
                            title: "Thành công",
                            text: "Đã thêm vào giỏ hàng thành công!",
                            showConfirmButton: false,
                            timer: 1000
                        }).then(() => {
                            // Reload the page after success
                            location.reload();
                        });
                        updateCartCount();
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Thất bại",
                            text: response.message || "Có lỗi xảy ra, vui lòng thử lại.",
                            showConfirmButton: false,
                            timer: 1500
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: "error",
                        title: "Thất bại",
                        text: "Đã có lỗi xảy ra, vui lòng thử lại.",
                        showConfirmButton: false,
                        timer: 1500
                    });
                }
            });
        }

    </script>

