    <script>
        function sortCampingGears() {
            const orderStatus = document.getElementById("sort").value;
            const customerId = '@(ViewBag.CustomerId ?? "1003")';
            const activityId = '@(ViewBag.CurrentCategoryId ?? "null")';

            // Construct the URL for filtering
            let url = `/Service/OrderHistory?customerId=${customerId}`;
            if (activityId !== "null") url += `&activityId=${activityId}`;
            if (orderStatus) url += `&statusOrder=${orderStatus}`;

            window.location.href = url;
        }

    </script>

