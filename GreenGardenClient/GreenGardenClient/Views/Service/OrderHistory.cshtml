    <script>
        $(document).ready(function () {
            // Sự kiện click cho nút hủy đơn hàng
            $('.btn-cancel-order').on('click', function (e) {
                e.preventDefault(); // Ngăn chặn hành động mặc định của nút

                var orderId = $(this).data('orderid'); // Lấy orderId từ thuộc tính data
                console.log(orderId); // Kiểm tra giá trị orderId

                if (confirm('Bạn có chắc chắn muốn hủy đơn hàng này?')) {
                    $.ajax({
                        url: '@Url.Action("CancelOrder", "Service")', // Đường dẫn tới action CancelOrder
                        type: 'POST',
                        data: { orderId: orderId },
                        success: function (result) {
                            if (result.success) {
                                alert(result.message);
                                location.reload(); // Tải lại trang
                            } else {
                                alert(result.message); // Hiển thị thông báo lỗi
                            }
                        },
                        error: function (xhr, status, error) {
                            console.log(xhr.responseText); // Kiểm tra thông điệp lỗi từ server
                            alert('Đã xảy ra lỗi: ' + error);
                        }
                    });
                }
            });
        });
    </script>

